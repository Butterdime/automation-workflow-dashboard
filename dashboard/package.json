{
  "name": "approval-ci-dashboard-frontend",
  "version": "1.0.0",
  "description": "Frontend dashboard for approval-driven CI/CD system",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3001 --open=approval-dashboard.html",
    "build": "npm run minify",
    "minify": "html-minifier --collapse-whitespace --remove-comments --minify-css --minify-js -o dist/index.html approval-dashboard.html",
    "format": "prettier --write .",
    "validate": "html-validate *.html"
  },
  "keywords": [
    "ci-cd",
    "approval",
    "dashboard",
    "frontend",
    "html",
    "javascript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2",
    "html-minifier": "^4.0.0",
    "prettier": "^3.1.0",
    "html-validate": "^8.7.4"
  },
  "dependencies": {},
  "engines": {
    "node": ">=18.0.0"
  }
}