{
  "name": "approval-ci-dashboard-frontend",
  "version": "1.0.0",
  "description": "Frontend dashboard for approval-driven CI/CD system",
  "main": "index.html",
  "scripts": {
    "dev": "serve --listen 3001 --single approval-dashboard.html",
    "build": "npm run minify",
    "minify": "mkdir -p dist && cp approval-dashboard.html dist/index.html",
    "format": "prettier --write .",
    "validate": "html-validate *.html"
  },
  "keywords": [
    "ci-cd",
    "approval",
    "dashboard",
    "frontend",
    "html",
    "javascript"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "html-validate": "^8.7.4",
    "prettier": "^3.1.0",
    "serve": "^14.2.5"
  },
  "engines": {
    "node": "22.x"
  }
}
